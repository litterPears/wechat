
.couponList{
	width:100%;
	min-height:100vh;
	background:#eee;
	overflow:hidden;
}
.couponTabs{
	margin:20rpx 20rpx 10rpx;
	background:#fff;
	box-shadow:8rpx 10rpx 15rpx #eee;
	height:200rpx;
	border-radius:8rpx;
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack:start;
	-webkit-justify-content:flex-start;
	        justify-content:flex-start;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
}
.couponImgs{
	width:220rpx;
	height:200rpx;
	background:#ec6c59;
	border-radius:5rpx;
}
.couponIcons{
	width:80rpx;
	height:30rpx;
	lin-height:30rpx;
	text-align:center;
	font-size:20rpx;
	color:#fff;
	background:#d81e06;
	letter-spacing:0.7rpx;
	border-radius:5rpx;
}
.couponMoney{
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack:center;
	-webkit-justify-content:center;
	        justify-content:center;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	height:80rpx;
	line-height:80rpx;
	text-align:center;
	font-size:45rpx;
	color:#fff;
	margin-top:20rpx;
}
.conIcon{
	font-size:20rpx;
	margin-top:10rpx;
}
.rules{
	line-height:40rpx;
	text-align:center;
	font-size:25rpx;
	color:#fff;
}
.couponTexts{
	width:calc(100% - 420rpx);
	padding-left:25rpx;
}
.couponTitle{
	line-height:80rpx;
	font-size:30rpx;
	color:#000;
}
.couponTime{
	line-height:40rpx;
	font-size:23rpx;
	color:#999;
}
.couponuse{
	height:50rpx;
	line-height:50rpx;
	text-align:center;
	padding:0 30rpx;
	font-size:23rpx;
	border:1rpx solid #d81e06;
	border-radius:30rpx;
	color:#d81e06;
	margin-left:20rpx;
}

