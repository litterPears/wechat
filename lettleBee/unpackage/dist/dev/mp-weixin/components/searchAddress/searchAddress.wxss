
.searchAddress{
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack:justify;
	-webkit-justify-content:space-between;
	        justify-content:space-between;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	padding:15rpx 20rpx;
	background:#B2EAF2;
}
.address{
	width:100rpx;
	height:80rpx;
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack:center;
	-webkit-justify-content:center;
	        justify-content:center;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	position:relative;
	top:0;
	left:0;
	z-index:3;
}
.icon-message{
	font-size:40rpx;
	color:#888;
}
.messageText{
	position:absolute;
	top:3rpx;
	left:60rpx;
	z-index:5;
	font-size:23rpx;
	color:#666;
	padding:5rpx;
	background:#eee;
	border-radius:50%;
}
.searchFor{
	height:80rpx;
	width:calc(100% - 100rpx);
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack:justify;
	-webkit-justify-content:space-between;
	        justify-content:space-between;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	border:1rpx solid #eee;
	border-radius:15rpx;
	background:#fff;
}
.iconSreach{
	width:30rpx;
	height:80rpx;
	line-height:80rpx;
	font-size:30rpx;
	color:#aaa;
	margin:0 15rpx 0 15rpx;
}
.inputWorld{
	width:62%;
	height:60rpx;
	line-height:80rpx;
	font-size:26rpx;
	color:#333;
}
.searchworlds{
	height:50rpx;
	line-height:50rpx;
	text-align:center;
	padding:0 30rpx;
	font-size:24rpx;
	color:#fff;
	background:#ee7d5c;
	border-radius:15rpx;
	margin-right:15rpx;
	margin-left:2rpx;
}

